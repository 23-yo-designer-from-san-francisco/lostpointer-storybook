{
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist/",
    "noImplicitAny": false, // !true
    "target": "esnext",
    "allowJs": true,
    "allowSyntheticDefaultImports" : true,
    "esModuleInterop" : true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "components/*" : ["src/components/*"],
      "forms/*": ["src/forms/*"],
      "tokens/*": ["tokens/*"]
    }
  },

  "include": [
    "./types/global.d.ts",
    "./src/**/*"
  ]
}
